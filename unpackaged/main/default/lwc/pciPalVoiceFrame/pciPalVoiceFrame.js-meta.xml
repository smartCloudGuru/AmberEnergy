            <property name="acessToken" type="String" description="PCIPal Access Token"/>
            <property name="refreshToken" type="String" description="PCIPal Access Token Refresh"/>
            <property name="redirectUrl" type="String" description="PCIPal URL"/>
            <property name="voiceCallID" type="String" description="Voice Call Record  URL"/>
